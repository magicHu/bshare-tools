

<%= link_to "New", new_ad_path, class: "btn btn-primary pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td class="span4"><%= ad.NAME %></td>
        <td><%= ad.DESCP %></td>
        <td><%= link_to "编辑", edit_ad_path(ad), class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>